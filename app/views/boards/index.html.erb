<% content_for :title, t('.title' )%>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= render 'search', q: @q, url: bookmarks_boards_path %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="row" >
      <% if @boards.present? %>
        <%= render partial: 'board', collection: @boards, as: :board %>
      <% else %>
        <p><%= t('boards.index.fail') %></p>
      <% end %>
      </div>
    </div>
  </div>
   <%= paginate @boards, theme: 'twitter-bootstrap-4' %>
</div>