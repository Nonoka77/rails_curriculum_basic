<% content_for :title, t('.title' )%>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with model: @user, url: profiles_path, method: :patch, local: true do |f|%>
      <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field  :email, id: 'user_email', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, id: 'user_last_name', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name,id: 'user_first_name', class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :avatar %>
            <%= f.file_field :avatar, onchange: 'previewImage()', class: 'form-control' %>
            <%= f.hidden_field :avatar_cache %>
        </div>
        <div class='mt-3 mb-3'>
            <%= image_tag @user.avatar.url, id: 'preview', size: '100x100', class: 'rounded-circle mr15' %>
        </div>
        <div class="actions">
        <%= f.submit  class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>